<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</head>
<body>
    
    <div class="d-flex justify-content-center">
  <div class=" justify-content-center"> 
    <form action=""  method="POST"  action="#" onsubmit="valid()" class="form" >
        <div class="col-md-3  text-center">
           <img src="https://img.icons8.com/fluency/48/000000/edit-user-male.png"/>
            <p>editar</p>
        </div>

        <div class="form-group justify-content-center">
        <label for="name" class="col-sm-6 col-form-label">Nome</label>
        <div class="col-sm-15">
            <input id="name" type="text" autocomplete="off" name="name" class="form-control" value="{{peop.name}}" placeholder="Name">
        </div>
       
        <div class="form-group">
        <label for="email" class="col-sm-5 col-form-label">e-mail</label>
        <div class="col-sm-15">
            <input aria-required="true" value="{{peop.email}}" autocomplete="off" name="email" placeholder="e-mail" type="email" class="form-control" >
        </div>

        <div class="form-group">
        <label for="age" class="col-sm-5 col-form-label">Idade</label>
        <div class="col-sm-15">
            <input id="idade" value="{{peop.age}}" aria-required="true" autocomplete="off" name="age" placeholder="Idade" type="number" class="form-control">
        </div>

        <div class="form-group">
        <label for="taxpayer" class="col-sm-5 col-form-label">CPF</label>
        <div class="col-sm-15">
         <input type="text" value="{{peop.taxpayer}}" required="required" name="taxpayer" maxlength="11" class="form-control" pattern="[0-9]+$" />
        </div>
        <br>
        <button class="btn btn-danger col-sm-12" "col-sm-3">Editar</button>
        </div>        
    </form>
    <script>
        
        function valid(){
            if(document.getElementById('name').value==""){
                alert("Por favor preencha os campos corretamente!");
                document.getElementById('name').focus();

                return false;

            }

            if(document.getElementById('name').value.length < 3){
                alert("Informe ao menos 3 caracteres!");
                document.getElementById("name").focus();
                return false
            }
            return true;
        }

        function valid(){
            if(document.getElementById("idade").value < 18){
                alert("Você é menor de idade não pode se cadastrar no evento!");
                document.getElementById("idade").focus();
                return false;
                }
                return true;
            }

            function valid(){
            if(document.getElementById("taxpayer").value < 11){
                alert("Campo CPF preenchido incorreto, verifique novamente!");
                document.getElementById("taxpayer").focus();
                return false;
                }
                return true;
            }

    </script>

  </div>
</div>




</body>
</html>





