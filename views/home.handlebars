<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="d-flex justify-content-center">
  <div class=" justify-content-center"> 
    <form action="/people/insertpeople"  method="POST"  action="#" onsubmit="valid()" class="form" >
        <div class="col-md-3  text-center">
            <img class="d-flex justify-content-center" src="img/alpha.png" alt="Cadastro">
        </div>

        <div class="form-group justify-content-center">
        <label for="name" class="col-sm-6 col-form-label">Nome</label>
        <div class="col-sm-15">
            <input id="name" type="text" autocomplete="off" name="name" class="form-control" placeholder="Name">
        </div>
       
        <div class="form-group">
        <label for="email" class="col-sm-5 col-form-label">e-mail</label>
        <div class="col-sm-15">
            <input aria-required="true" autocomplete="off" name="email" placeholder="e-mail" type="email" class="form-control" >
        </div>

        <div class="form-group">
        <label for="age" class="col-sm-5 col-form-label">Idade</label>
        <div class="col-sm-15">
            <input aria-required="true" autocomplete="off" name="age" placeholder="Idade" type="number" class="form-control">
        </div>

        <div class="form-group">
        <label for="taxpayer" class="col-sm-5 col-form-label">CPF</label>
        <div class="col-sm-15">
            <input type="text"  pattern='^[1-11][0-11]{3}$' maxlength="11" autocomplete="off" name="taxpayer" placeholder="" class="form-control" >
        </div>
        <br>
        <button class="btn btn-outline-dark col-sm-12">Cadastrar</button>
        </div>        
    </form>
    <script>
        
        function valid(){
            if(document.getElementById('name').value==""){
                alert("Por favor preencha os campos corretamente!");
                document.getElementById('name').focus();

                return false;

            }
            if(document.getElementById('name').value.length < 3){
                alert("Informe ao menos 3 caracteres!");
                document.getElementById("name").focus();
                return false
            }


            return true;
        }

    </script>

  </div>
</div>


